all: $(TARGSRC)  $(OBJDIR) $(TARGET)

$(OBJDIR):
	mkdir $(OBJDIR)

$(TARGET): $(TARGOBJ) $(TARGEXTRAS)
	$(CC) -o $(BUILDDIR)/$(TARGETFILE) $(TARGOBJ) $(LDFLAGS)

$(EXTRAS_DIR)/%: % 
	cp $< $@

$(OBJDIR)/%.o: $(SRCDIR)/%.c  
	$(CC) $(CFLAGS) -c $< -o $@

$(OBJDIR)/%.o: $(SRCDIR)/%.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm $(TARGOBJ)
	rm -rf $(OBJDIR)