all: $(TARGSRC)  $(OBJDIR) $(TARGET)

$(OBJDIR):
	mkdir $(OBJDIR)

$(TARGET): $(TARGOBJ) 
	$(CC) -o $(BUILDDIR)/$@ $(TARGOBJ) $(LDFLAGS) 

$(OBJDIR)/%.o: $(SRCDIR)/%.c  
	$(CC) $(CFLAGS) -c $< -o $@

$(OBJDIR)/%.o: $(SRCDIR)/%.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm $(TARGOBJ)
	rm -rf $(OBJDIR)